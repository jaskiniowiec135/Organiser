<?xml version="1.0" encoding="utf-8"?>
<GridLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="5">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:textSize="24sp"
                android:text="Base activity info"
                android:textAlignment="center"
                android:textColor="#ffffffff"
                android:background="?android:attr/colorPrimary"/>
        <TableLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:stretchColumns="0,1">
                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:text="Activity Name:"
                                android:textAlignment="center"
                                android:layout_marginTop="10dp"
                                android:paddingRight="20dp"/>
                        <EditText
                                android:id="@+id/input_activity_name"
                                android:inputType="text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:width="400px"/>
                </TableRow>
                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="15dp">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:text="Date:"
                                android:textAlignment="center"
                                android:layout_marginTop="10dp"
                                android:paddingRight="20dp"/>
                        <EditText
                                android:id="@+id/input_date"
                                android:inputType="date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:width="400px"/>
                </TableRow>
                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="15dp">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:text="Category:"
                                android:textAlignment="center"
                                android:layout_marginTop="10dp"
                                android:paddingRight="20dp"/>
                        <EditText
                                android:id="@+id/input_category"
                                android:inputType="text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:width="400px"/>
                </TableRow>
                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">        
                        <Button
                                android:id="@+id/save_new_activity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="5dp"
                                android:background="#ffbdbdbd"
                                android:textSize="18sp"
                                android:text="Save activity"/>
                </TableRow>
        </TableLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_row="2"
                android:textSize="24sp"
                android:text="Additional activity info"
                android:textAlignment="center"
                android:textColor="#ffffffff"
                android:background="?android:attr/colorPrimary"/>
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:isScrollContainer="true"
                android:layout_row="3"
                android:stretchColumns="0,1">
                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                                android:id="@+id/add_activityParam_Button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:padding="5dp"
                                android:textSize="18sp"
                                android:background="#ffbdbdbd"
                                android:text="Add info"/>
                </TableRow>
        </TableLayout>    
</GridLayout>